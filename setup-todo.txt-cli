#!/bin/bash
# Setup script for todo.txt-cli

cd /tmp
wget -qO todo.txt_cli.tar.gz $(curl -s https://api.github.com/repos/ginatrapani/todo.txt-cli/releases/latest | grep browser_download_url | head -n 1 | cut -d '"' -f 4)
tar -xzf todo.txt_cli.tar.gz
cd todo.txt_cli*
chmod +x todo.sh
SCRIPT_DIR=$HOME/.local/bin
if [ -x $SCRIPT_DIR/todo.sh ]; then
  if [[ $(cmp todo.sh $SCRIPT_DIR/todo.sh) ]]; then
    cp todo.sh $SCRIPT_DIR/todo.sh
  fi
else
  cp todo.sh $SCRIPT_DIR/todo.sh
fi
